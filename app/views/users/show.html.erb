<main class="users-show">
  <h1>All your events</h1>
  <div class="cards-container">
    <h2>All events you created:</h2>
    
    
      <% if @events_created.any? %>
        <% @events_created.each do | event| %>
          <div class="event-card gradient-border">
            <h3><%= event.name %></h3>
            <hr>
            <p><%= event.location %></p>
            <p><%= event.date %></p>
            <p><%= button_to "View", event_path(event.id), method: :get %></p>
          </div>
        <% end %>
      <% else %>
       <p> You have not created any events yet. </p>
      <% end %>
  
    
    <% if @upcoming_events.any? %>
      <h2>Upcoming events:</h2>
        <% @upcoming_events.each do |event| %>
          <div class="event-card gradient-border">
            <h3><%= event.name %></h3>
            <hr>
            <p><%= event.location %></p>
            <p><%= event.date %></p>
            <p><%= button_to "View", event_path(event.id), method: :get %></p>
          </div>
        <% end %>
    <% end %>
    
    
    <% if @past_events.any? %>
      <h2>Events you attended:</h2>
        <% @past_events.each do |event| %>
          <div class="event-card gradient-border">
            <h3><%= event.name %></h3>
            <hr>
            <p><%= event.location %></p>
            <p><%= event.date %></p>
            <p><%= button_to "View", event_path(event.id), method: :get %></p>
          </div>
        <% end %>
    <% end %>
  </div>
  
  
