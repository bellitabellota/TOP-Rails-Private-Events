<% if event.errors.any? %>
  <% event.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_with model: event do |form| %>
  <%= form.label :name, "Eventname" %>
  <%= form.text_field :name %>

  <%= form.label :date %>
  <%= form.datetime_local_field :date %>  

  <%= form.label :location %>
  <%= form.text_field :location %>

  <%= form.button "Submit" %>



<% end %>